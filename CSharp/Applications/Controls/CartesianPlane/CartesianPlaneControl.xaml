<UserControl x:Class="Deyo.Controls.CartesianPlane.CartesianPlaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cartesian="clr-namespace:Deyo.Controls.CartesianPlane"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">    
    <ItemsControl ItemsSource="{Binding Elements}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Canvas.Clip>
                        <RectangleGeometry Rect="{Binding ViewportRectangle}" />
                    </Canvas.Clip>
                    <Canvas.RenderTransform>
                        <MatrixTransform Matrix="{Binding ViewportTransform}" />
                    </Canvas.RenderTransform>
                </Canvas>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
